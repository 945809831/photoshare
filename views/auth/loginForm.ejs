<%# 登录窗口%>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PhotoShare</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css" />
    <link rel='stylesheet' href='/stylesheets/login.css' />
  </head>
  <body>
    <div class="container">
      <div class="logo">
        <a href="/index">
          <img  src="/images/photo.png" alt="Home Logo">
        </a>
      </div>
      <h3 class="text-center text-success">登录PhotoShare</h3>
      <%# 用于显示出错信息%>
      <% include messages %>

      <form id="login-form" method="post" action="/login">
          <div class="form-group">
              <label for="email">电子邮件地址</label>
              <input class="form-control" ng-model="email" type="email" name="email" required>
          </div>
          <div class="form-group">
              <label for="pwd">密码</label>
              <input class="form-control" ng-model="password" type="password" name="pwd" required>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" name="remember" value="remember-me">记住我
            </label>
          </div>
            <button class="btn btn-success btn-block" type="submit">登录</button>
      </form>
    </div>
  </body>
</html>
