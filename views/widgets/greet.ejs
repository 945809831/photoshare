<!-- 用户信息-->
<div class="page-header">
    <h1>
        <img  id="head-profile" src="<%= user.avatar_url ||'/images/user.jpg' %>">
        <span id="greet"> <%= locals.user.nickname || locals.user.email%></span> 
        <% var hour = new Date().getHours(); 
           if(hour > 12) { %>
                <small class="text-primary">，下午好！</small>
           <% } else { %>
                <small class="text-success">，上午好！</small>
           <% } %>
    </h1>
</div>